<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:scrollbars="none"
              android:gravity="center"
              android:text="@string/app_name"
              tools:context="com.geometrics.settings.GeometricsSettings">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/lockscreensettings_card"
            android:layout_width="200dp"
            android:layout_height="400dp"
            android:layout_marginStart="0dp"
            android:layout_margin="55dp"
            android:layout_marginBottom="36.0dip"
            app:cardCornerRadius="30dp"
            app:cardElevation="0dp"
            app:strokeColor="?android:attr/textColorPrimary"
            app:strokeWidth="3dp">

            <com.geometrics.settings.Utils.WallpaperView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/wallpaper_view"
                android:contentDescription="@null"
                android:elevation="0dp"
                android:foreground="@drawable/wallpaper_view"
                android:gravity="center"
                android:orientation="horizontal"
                android:scaleType="centerCrop" />

            <TextView
                style="@style/op_control_text_style_h6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/lockscreen_clock_preview"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="70dp"
                android:layout_marginTop="40dp"
                android:fontFamily="googlesans-flex"
                android:text="@string/lockscreen_title"
                android:textColor="#FFFFFFFF"
                android:textFontWeight="300"
                android:textSize="18sp" />

            <TextClock
                android:id="@+id/lockscreen_clock_preview"
                style="@style/op_control_text_style_h6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="60dp"
                android:layout_marginTop="120dp"
                android:fontFamily="@*android:string/config_clockFontFamily"
                android:format12Hour="hh\nmm"
                android:format24Hour="hh\nmm"
                android:textColor="#C1E8FF"
                android:textFontWeight="300"
                android:textSize="60sp" />

            <ImageView
                android:id="@+id/lock_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/lockscreen_clock_preview"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="160dp"
                android:layout_marginTop="550dp"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_lock"
                android:tint="#FFFFFFFF" />
            </com.google.android.material.card.MaterialCardView>

            <FrameLayout
                android:id="@+id/horizontal_card_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:background="@drawable/geometrics_card_bg"
                app:cardBackgroundColor="#00000000"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/themesettings_card"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="#00000000"
                    android:layout_weight="1"
                    android:src="@drawable/geometrics_dark__card_themes"
                    android:scaleType="fitXY"
                    android:layout_gravity="left"
                    android:layout_margin="15dp" />

                <ImageView
                    android:id="@+id/statusbarsettings_card"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="#00000000"
                    android:layout_weight="1"
                    android:src="@drawable/geometrics_dark__card_statusbar"
                    android:scaleType="fitXY"
                    android:layout_gravity="center"
                    android:layout_marginRight="37dp"/>

                <ImageView
                    android:id="@+id/notificationspanelsettings_card"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="#00000000"
                    android:layout_weight="1"
                    android:src="@drawable/geometrics_dark__card_notificationpanel"
                    android:scaleType="fitXY"
                    android:layout_gravity="center"
                    android:layout_marginLeft="35dp" />

                <ImageView
                    android:id="@+id/miscsettings_card"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="#00000000"
                    android:layout_weight="1"
                    android:src="@drawable/geometrics_dark__card_misc"
                    android:scaleType="fitXY"
                    android:layout_gravity="center"
                    android:layout_marginLeft="105dp" />

                </FrameLayout>

            </LinearLayout>

        </LinearLayout>
